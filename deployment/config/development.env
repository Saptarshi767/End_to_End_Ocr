# Development Environment Configuration

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG
SECRET_KEY=dev-secret-key-not-for-production

# Database Configuration
DATABASE_URL=sqlite:///./data/ocr_analytics_dev.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Configuration (optional for development)
REDIS_URL=redis://localhost:6379/0
REDIS_SESSION_DB=1
REDIS_CACHE_DB=2

# Security Settings (relaxed for development)
JWT_SECRET_KEY=dev-jwt-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30
PASSWORD_MIN_LENGTH=6
MAX_LOGIN_ATTEMPTS=10
ACCOUNT_LOCKOUT_DURATION=300

# OCR Configuration
DEFAULT_OCR_ENGINE=tesseract
OCR_CONFIDENCE_THRESHOLD=0.5
MAX_DOCUMENT_SIZE_MB=20
SUPPORTED_FORMATS=pdf,png,jpg,jpeg,tiff,bmp

# API Configuration
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=3600
MAX_CONCURRENT_REQUESTS=20
REQUEST_TIMEOUT=120

# File Storage
DATA_DIR=./data
UPLOAD_DIR=./uploads
EXPORT_DIR=./exports
LOG_DIR=./logs
MAX_UPLOAD_SIZE=52428800
CLEANUP_TEMP_FILES=false
TEMP_FILE_RETENTION_HOURS=1

# Privacy and Compliance (relaxed for development)
ENABLE_DATA_ENCRYPTION=false
ENABLE_AUDIT_LOGGING=true
DATA_RETENTION_DAYS=30
ENABLE_PII_DETECTION=true
REQUIRE_CONSENT_FOR_PII=false
ANONYMIZE_EXPORTS=false

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=60

# Email Configuration (disabled for development)
SMTP_HOST=
SMTP_PORT=587
SMTP_USE_TLS=false
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=dev@localhost

# External Services (use test keys)
OPENAI_API_KEY=sk-test-key
GOOGLE_CLOUD_CREDENTIALS_PATH=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Backup Configuration (disabled for development)
ENABLE_AUTOMATED_BACKUPS=false
BACKUP_SCHEDULE=
BACKUP_RETENTION_DAYS=7
BACKUP_STORAGE_PATH=./backups

# Performance Tuning (lighter for development)
WORKER_PROCESSES=1
WORKER_CONNECTIONS=100
WORKER_TIMEOUT=120
KEEP_ALIVE=2
MAX_REQUESTS=100
MAX_REQUESTS_JITTER=10

# Feature Flags (all enabled for development)
ENABLE_CONVERSATIONAL_AI=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_SHARING=true
ENABLE_API_KEYS=true

# Logging Configuration
LOG_FORMAT=text
LOG_ROTATION=never
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=3
AUDIT_LOG_RETENTION_DAYS=30

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=100
ENABLE_QUERY_CACHE=false
ENABLE_RESULT_CACHE=false

# Development-specific settings
RELOAD_ON_CHANGE=true
SHOW_SQL_QUERIES=false
ENABLE_PROFILING=false
MOCK_EXTERNAL_SERVICES=true