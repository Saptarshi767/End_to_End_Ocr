# Production Environment Configuration

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=postgresql://ocruser:ocrpass@postgres:5432/ocr_analytics
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Configuration
REDIS_URL=redis://:redispass@redis:6379/0
REDIS_SESSION_DB=1
REDIS_CACHE_DB=2

# Security Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=1800

# OCR Configuration
DEFAULT_OCR_ENGINE=tesseract
OCR_CONFIDENCE_THRESHOLD=0.7
MAX_DOCUMENT_SIZE_MB=50
SUPPORTED_FORMATS=pdf,png,jpg,jpeg,tiff,bmp

# API Configuration
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=3600
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=300

# File Storage
DATA_DIR=/app/data
UPLOAD_DIR=/app/uploads
EXPORT_DIR=/app/exports
LOG_DIR=/app/logs
MAX_UPLOAD_SIZE=104857600
CLEANUP_TEMP_FILES=true
TEMP_FILE_RETENTION_HOURS=24

# Privacy and Compliance
ENABLE_DATA_ENCRYPTION=true
ENABLE_AUDIT_LOGGING=true
DATA_RETENTION_DAYS=2555
ENABLE_PII_DETECTION=true
REQUIRE_CONSENT_FOR_PII=true
ANONYMIZE_EXPORTS=false

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=notifications@example.com
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=noreply@example.com

# External Services
OPENAI_API_KEY=your-openai-api-key
GOOGLE_CLOUD_CREDENTIALS_PATH=/app/credentials/google-cloud.json
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Backup Configuration
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/app/backups

# Performance Tuning
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
WORKER_TIMEOUT=300
KEEP_ALIVE=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# Feature Flags
ENABLE_CONVERSATIONAL_AI=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_SHARING=true
ENABLE_API_KEYS=true

# Logging Configuration
LOG_FORMAT=json
LOG_ROTATION=daily
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=30
AUDIT_LOG_RETENTION_DAYS=2555

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
ENABLE_QUERY_CACHE=true
ENABLE_RESULT_CACHE=true